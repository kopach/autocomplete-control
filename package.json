{
  "private": true,
  "author": "Ihor Kopach <igor@kopach.dev> (https://kopach.dev)",
  "scripts": {
    "__prerelease:source-url": "if [ ! -z \"${TRAVIS_REPO_SLUG}\" ]; then echo https://github.com/$TRAVIS_REPO_SLUG/tree/\"${TRAVIS_TAG:-$TRAVIS_COMMIT}\" > dist/SOURCE_URL; fi",
    "__prerelease:version": "VERSION=$(utc-version); echo $VERSION; dot-json dist/manifest.json version $VERSION",
    "__release": "npm-run-all build prerelease:* release:*",
    "__release:amo": "web-ext-submit --source-dir dist",
    "__release:cws": "webstore upload --source=dist --auto-publish",
    "__test": "",
    "_watch": "webpack --mode=development --watch",
    "_watch:browser": "concurrently --raw --kill-others \"npm run  _watch\" \"web-ext run --source-dir=dist $TARGET_BROWSER_PARAMS\"",
    "build": "webpack --mode=production",
    "lint": "run-p lint:*",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint-package.json": "prettier-package-json --list-different",
    "lint:css": "stylelint src/**/*.css",
    "lint:ts": "tslint --project tsconfig.json --config tslint.json",
    "watch:android": "TARGET_BROWSER_PARAMS='--target firefox-android' npm run _watch:browser",
    "watch:chromium": "TARGET_BROWSER_PARAMS='--target chromium' npm run _watch:browser",
    "watch:firefox": "TARGET_BROWSER_PARAMS='--target firefox-desktop' npm run _watch:browser"
  },
  "dependencies": {
    "webext-options-sync": "1.2.1",
    "webextension-polyfill": "0.4.0"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "70.0.1",
    "chrome-webstore-upload-cli": "1.2.0",
    "codelyzer": "5.2.0",
    "concurrently": "^5.0.1",
    "copy-webpack-plugin": "5.0.3",
    "dot-json": "1.1.0",
    "eslint": "6.1.0",
    "eslint-plugin-tslint": "3.1.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "prettier-package-json": "2.1.3",
    "size-plugin": "1.2.0",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "20.0.0",
    "terser-webpack-plugin": "1.3.0",
    "ts-loader": "6.2.1",
    "tslint": "5.20.1",
    "tslint-clean-code": "0.2.10",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.1.0",
    "typescript": "3.7.3",
    "utc-version": "2.0.1",
    "web-ext": "3.2.1",
    "web-ext-submit": "3.2.1",
    "webpack": "4.36.1",
    "webpack-cli": "3.3.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  }
}
